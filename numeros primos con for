//comprobar si un numero es primo.(solo divisible por 1 y por si mismo)


package numerosprimos;

	import java.util.Scanner;

public class numerosprimos {
	public static void main(String[] arg) {
		 int num;
		 boolean resultado=true;
		 Scanner S= new Scanner(System.in);
		 
		 System.out.println("introduce un numero para comprobar si es primo");
		 num=S.nextInt();
		
		 for(int i=2; i<num;i++) {
			 if(num % i == 0 ) {
				 resultado = false;
			 }
			 
		 }
		 if(resultado) {
			 System.out.println("el num es primo");
		 }
		 else {System.out.println(" numero no es primo");
		 	}

		}
	}
