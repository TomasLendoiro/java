package bucles;

import java.util.Scanner;

public class bucles {
	public static void main(String[]arg) {
		int a;
		Scanner S=new Scanner(System.in);
		
	
	do {
		System.out.println("1. enseñar por pantalla Hola Mundo");
		System.out.println("2. enseñar por pantalla los numeros entre 5 y 10.");
		System.out.println("3. enseñar por pantalla suscribete a mi canal ");
		System.out.print("introduce una opcion: ");
		a=S.nextInt();
	}while(a>3 || a<1);
	
	switch(a) {
	
	case 1:
		System.out.print("Hola Mundo");
		break;
		
	case 2:
		for(int i=5;i<10;i++) {
			System.out.print(i+", ");
		}break;
	case 3:
		System.out.print("suscribete a mi canal ");
		break;
	}
}
}
